{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "rootDir": "./app"
    },
    "filesGlob": [
        "./dev/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "exclude": [
        "node_module/*"
    ]
}